section.hvh-form-checkout
	form(action="payment-complete.html" autocomplete="off")
		// TAB 2 FOMRS WRAPPER
		.tab-container
			ul.tab__list
				li.item(toggle-for="enterprise")
					i.fal.fa-building
					span Doanh nghiệp
				li.item(toggle-for="personal")
					i.fal.fa-user
					span Cá nhân
			.tab__content
				.block-form.content(tab-id="enterprise")
					.form-row
						.col-lg-12
							.hvh-checkout-head
								h3 Thông tin bắt buộc*
						.form-group.col-lg-12
							label.col-form-label(for="name") Họ và tên*
							input.form-control(type="text" name="name" placeholder="Nhập họ và tên" data-required)
							span.invalid-feedback Nhập lại họ và tên
						.form-group.col-lg-6
							label.col-form-label(for="phone") Điện thoại*
							input.form-control(type="tel" name="phone" placeholder="+84" data-required)
							span.invalid-feedback Nhập lại số điện thoại
						.form-group.col-lg-6
							label.col-form-label(for="email") Email*
							input.form-control(type="email" name="email" placeholder="Nhập email" data-required)
							span.invalid-feedback Nhập lại email
					.form-row
						.col-lg-12
							.hvh-checkout-head
								h3 Thông tin chi tiết (không bắt buộc)
						.form-group.col-lg-6
							label.col-form-label(for="company_name") Tên Công ty
							input.form-control(type="text" name="company_name" placeholder="Nhập tên công ty")
						.form-group.col-lg-6
							label.col-form-label(for="company_name") Địa chỉ
							input.form-control(type="text" name="adress" placeholder="Nhập địa chỉ")
						.form-group.col-lg-6
							label.col-form-label(for="vat") Mã số Thuế
							input.form-control(type="text" name="vat" placeholder="Nhập mã số thuế công ty")
						.form-group.col-lg-6
							label.col-form-label Quốc gia
							select.form-control.custom-select(name="country_id")
								option(value) Chọn quốc gia
								-for(i=0;i<10;i++)
									option(value="test") Tên của các quốc gia
						.form-group.col-lg-6
							label.col-form-label(for="ward_id") Phường/ Xã
							select#ward_id.form-control.custom-select(name="ward_id")
								option(value) Chọn Phường/ Xã
								-for(i=0;i<10;i++)
									option(value="test") Tên của các phường xã
						.form-group.col-lg-6
							label.col-form-label(for="state_id") Tỉnh/TP
							select.form-control.custom-select(name="state_id")
								option(value) Quận/ Huyện
								-for(i=0;i<10;i++)
									option(value="test") 10
						.form-group.col-lg-6
							label.col-form-label(for="state_id") Tỉnh/TP
							select.form-control.custom-select(name="state_id")
								option(value) Chọn tỉnh/thành phố
								-for(i=0;i<10;i++)
									option(value="test") Tên của các tỉnh/thành phố
					.form-row
						.col-lg-12
							.hvh-checkout-head
								h3 Hình thức thanh toán
							ul.hvh-payments
								li.hvh-item-payment
									label.group-custom-checkbox
										.custom-checkbox
											input(type="radio" name="enterprise_payment" checked="checked" value="payment-complete.html")
										span Thanh toán bằng hình thức gửi hóa đơn về email
								li.hvh-item-payment
									label.group-custom-checkbox
										.custom-checkbox
											input(type="radio" name="enterprise_payment" value="payment-online.html")
										span Thanh toán bằng hình thức online
				.block-form.content(tab-id="personal")
					.form-row
						.col-lg-12
							.hvh-checkout-head
								h3 Thông tin bắt buộc*
						.form-group.col-lg-12
							label.col-form-label(for="name") Họ và tên*
							input.form-control(type="text" name="name" placeholder="Nhập họ và tên" data-required)
						.form-group.col-lg-6
							label.col-form-label(for="phone") Điện thoại
							input.form-control(type="tel" name="phone" placeholder="+84" data-required)
						.form-group.col-lg-6
							label.col-form-label(for="phone") Email
							input.form-control(type="email" name="email" placeholder="Nhập địa chỉ Email" data-required)
					.form-row
						.col-lg-12
							.hvh-checkout-head
								h3 Thông tin chi tiết (không bắt buộc)
						.form-group.col-lg-6
							label.col-form-label Quốc gia
							select.form-control.custom-select(name="country_id")
								option(value) Chọn quốc gia
								-for(i=0;i<10;i++)
									option(value="test") Tên của các quốc gia
					.form-row
						.col-lg-12
							.hvh-checkout-head
								h3 Hình thức thanh toán
							ul.hvh-payments
								li.hvh-item-payment
									label.group-custom-checkbox
										.custom-checkbox
											input(type="radio" name="personal_payment" checked="checked" value="payment-complete.html")
										span Thanh toán bằng hình thức gửi hóa đơn về email
								li.hvh-item-payment
									label.group-custom-checkbox
										.custom-checkbox
											input(type="radio" name="personal_payment" value="payment-online.html")
										span Thanh toán bằng hình thức online
		// BUTTONS IN FORMS
		.buttons-form
			a.btn.btn-secondary.border-primary(href="index.html")
				i.fal.fa-arrow-left
				span Quay về
			button.btn.btn-primary
				span Thanh toán ngay
				i.fal.fa-arrow-right
		// GET INPUT HIDDEN HERE
		input#CustomerSegment(hidden value)