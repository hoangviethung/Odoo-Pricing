							input.form-control(type="tel" name="phone" placeholder="+84")
						.form-group.col-lg-6
							label.col-form-label(for="phone") Email
							input.form-control(type="email" name="email" placeholder="Nhập địa chỉ Email")
						.form-group.col-lg-6
							label.col-form-label(for="country_id") Quốc gia
							select#country_id.form-control.custom-select(name="country_id")
								option(value) Chọn quốc gia
								-for(i=0;i<10;i++)
									option(value="test") Tên của các quốc gia
						.col-lg-12
							.hvh-checkout-head
								h3 Hình thức thanh toán
							ul.hvh-payments
								li.hvh-item-payment
									label.group-custom-checkbox
										.custom-checkbox
											input(type="radio" name="payment" checked="checked")
										span Thanh toán bằng hình thức gửi hóa đơn về email
								li.hvh-item-payment
									label.group-custom-checkbox
